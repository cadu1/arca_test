{% extends 'template/admin_template.html.twig' %}

{% block content %}
	<div id="infoMessage">{{ message }}</div>

	<div class="row">
		<div class="col-md-3">
			<h3>Business</h3>
		</div>
		<div class="col-md-4 col-md-offset-5" align="left">
			<a href="{{base_url}}add_company" class="btn btn-default">Add business</a>
			<a href="{{base_url}}getout" class="btn btn-default">Logoff</a>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<ol>
				{% for company in companies %}
					<li style="font-size:25px">{{ company.title }}</li>
				{% endfor %}
			</ol>
		</div>
	</div>
	{% endblock %}