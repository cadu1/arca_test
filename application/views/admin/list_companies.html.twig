{% extends 'template/template.html.twig' %}

{% block content %}
	<div id="infoMessage">{{ message }}</div>

	<div class="row">
		<div class="col-md-4 col-md-offset-4" align="center">
			<h1 class="offset1">Business Finder</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3">
			<h3>Business</h3>
		</div>
		<div class="col-md-2 col-md-offset-7">
			<a href="{{base_url}}add_company" class="btn btn-default">Add business</a>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<ol>
				{% for company in companies %}
					<li><h2>{{ company.title }}</h2></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	{% endblock %}