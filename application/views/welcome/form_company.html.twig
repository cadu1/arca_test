{% extends 'template/template.html.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-4">
				<div class="form-group">
					<label for="title">Title</label>
					<input type="text" class="form-control" disabled id="title" value="{{company.title}}">
				</div>

				<div class="form-group">
					<label for="phone">Phone</label>
					<input type="text" class="form-control" disabled id="phone" value="{{company.phonenumber}}">
				</div>

				<div class="form-group">
					<label for="address">Address</label>
					<input type="text" class="form-control" disabled id="address" value="{{company.address}}">
				</div>

				<div class="form-group">
					<label for="zipcode">Zip Code</label>
					<input type="text" class="form-control" disabled id="zipcode" value="{{company.zipcode}}">
				</div>

				<div class="form-group">
					<label for="state">State</label>
					<select class="form-control selectpicker" disabled id="state">
						{% for state in states %}
							<option value="{{state.state}}">{{state.state}}</option>
						{% endfor %}
					</select>
				</div>

				<div class="form-group">
					<label for="city">City</label>
					<select class="form-control selectpicker" disabled id="city">
						{% for city in cities %}
							<option value="{{city.id}}">{{city.name}}</option>
						{% endfor %}
					</select>
				</div>

				<div class="form-group">
					<label for="description">Description</label>
					<textarea class="form-control" disabled id="description" rows="3">{{company.description}}</textarea>
				</div>

				<div class="form-group">
					<label for="category">Category</label>
					<select class="form-control selectpicker" disabled name="category[]" id="category" multiple>
						{% for category in categories %}
							<option value="{{category.id}}">{{category.name}}</option>
						{% endfor %}
					</select>
				</div>
		</div>
	</div>

	{% endblock %}