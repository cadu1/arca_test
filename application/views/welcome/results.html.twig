{% extends 'template/template.html.twig' %}

{% block content %}
	<div id="infoMessage">{{ message }}</div>

	<div class="row">
		<div class="col-md-4 col-md-offset-4" align="center">
			<h1 class="offset1">Business Finder</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<h1 class="offset1">Results for "{{ key_word }}"</h1>
			<ol>
				{% for company in companies %}
					<li><h2>{{ company.title }}</h2><h5>in {{ company.title }}</h5></li>
				{% endfor %}
			</ol>
		</div>
	</div>
	{% endblock %}